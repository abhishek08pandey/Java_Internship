<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	version="3.1">



	<servlet>
		<servlet-name>Second</servlet-name>
		<jsp-file>/WEB-INF/class/add.jsp</jsp-file>
	</servlet>

	<servlet-mapping>
		<servlet-name>Second</servlet-name>
		<url-pattern>/jsp</url-pattern>
	</servlet-mapping>


	<servlet>
		<servlet-name>first</servlet-name>
		<servlet-class>com.onerivet.FirstServlet</servlet-class>
		<!-- when u want to set parameter reflect in perticuler servlet -->
		<init-param>
			<param-name>name</param-name>
			<param-value>Abhishek</param-value>
		</init-param>
	</servlet>


	<servlet-mapping>
		<servlet-name>first</servlet-name>
		<url-pattern>/adds</url-pattern>
	</servlet-mapping>
	<!-- when u want to set parameter reflect in all servlet -->
	<context-param>
		<param-name>city</param-name>
		<param-value>Valsad</param-value>
	</context-param>

<!-- Filter use by web.xml file  -->
	<filter>
		<filter-name>First</filter-name>
		<filter-class>com.onerivet.FirstFilter</filter-class>
	</filter>

	<filter-mapping>
		<filter-name>First</filter-name>
		<url-pattern>/jsp</url-pattern>
	</filter-mapping>
	
	<filter>
		<filter-name>second</filter-name>
		<filter-class>com.onerivet.FirstFilter</filter-class>
	</filter>

	<filter-mapping>
		<filter-name>second</filter-name>
		<url-pattern>/adds</url-pattern>
	</filter-mapping>

</web-app>