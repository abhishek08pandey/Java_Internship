package com.OneRivet.task;

import java.util.Scanner;

public class PrimeNumber {

	static int stop = 0;
	
	public static void main(String[] args) {

		int firstNum;

		int lastNum;

		Scanner scan = new Scanner(System.in);
		System.out.println("Enter Fist number");
		firstNum = scan.nextInt();
		System.out.println("Enter Last number");
		lastNum = scan.nextInt();

		//int number = firstNum / 2;

		for (int i = firstNum; i <= lastNum; i++) {
			checkPrimeNumber(firstNum);
		}
	}

	public static void checkPrimeNumber(int firstNum) {
		
		for(int i =2; i< firstNum; i++) {
	
		if (firstNum == 0 || firstNum == 1) {
			System.out.println(firstNum + " :is not prime number");
		} else {
			if (firstNum % firstNum == 0) {
				System.out.println(firstNum + " :is not prime number");
				break;
			} // if
		}
		}
		if (stop == 0) {
			System.out.println(firstNum+" :prime number");
		}

	}

//			for (int j = 2; j <= number; j++) {
//				if (firstNum == 0 || firstNum == 1) {
//					System.out.println(i + " :is not prime number");
//				} else {
//					if (i % j == 0) {
//						System.out.println(i + " :is not prime number");
//						stop = 1;
//						break;
//					}//if
//				}//else
//			}

}
